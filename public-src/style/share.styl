#share
  width: 80px
  height: 40px
  background-color: #404040
  position: absolute
  display none
  
  div
    width: 30px
    height: 30px
    margin: 5px
    margin-right: 0
    background-color: #F56218
    display: inline-block
    cursor: pointer
  
  
  &:after
    content: ""
    width: 0
    height: 0
    position: absolute
    left: 30px
    top: 100%
    
    border-left: 10px solid transparent
    border-right: 10px solid transparent
    border-top: 10px solid #404040